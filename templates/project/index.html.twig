{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<table>
    <thead>
    <tr>
        <td>
            Name
        </td>
        <td>
            Token
        </td>
        <td>
            Author
        </td>
        <td>
            View
        </td>
        <td>
            Edit
        </td>
    </tr>
    </thead>
    <tbody>
    {% for project in projects %}
        <tr>
            <td>{{ project.name }}</td>
            <td>{{ project.token }}</td>
            <td>{{ project.author }}</td>
            <td><a href="{{ path('project_byId', {"id": project.id}) }}">View</a></td>
            <td><a href="{{ path('project_byId_edit', {"id": project.id}) }}">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <a href="{{ path("project_create_form") }}">Create Project</a>
{% endblock %}
